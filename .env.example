# Application Settings
APP_NAME="Patient Provider System"
APP_VERSION="0.1.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Region Configuration (USA or INDIA)
# If not set, the system will prompt for selection at startup
PROVIDER_REGION="usa"  # Options: "usa" or "india"

# API Server
HOST="0.0.0.0"
PORT=8000
RELOAD=true

# Database Configuration
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/provider_db"
# For SQLite (development): DATABASE_URL="sqlite+aiosqlite:///./provider.db"
DB_ECHO=false  # Set to true to log SQL queries
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Redis Cache Configuration
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
CACHE_TTL=3600  # Cache time-to-live in seconds (1 hour)
CACHE_ENABLED=true

# USA - NPI Registry API
NPI_REGISTRY_BASE_URL="https://npiregistry.cms.hhs.gov/api"
NPI_REGISTRY_VERSION="2.1"
NPI_REGISTRY_API_KEY=""  # Usually not required (public API)

# USA - State License APIs
STATE_LICENSE_API_URL="https://example.com/api/licenses"
STATE_LICENSE_API_KEY=""  # If required

# India - NMC (National Medical Commission) API
# Third-party API like Surepass NMC Verification API
NMC_REGISTRY_URL="https://api.surepass.io/nmc-verification"
NMC_API_KEY=""  # Required for third-party NMC APIs

# India - State Medical Council APIs
INDIA_STATE_MEDICAL_API_KEY=""  # If required

# Google Maps API
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
GOOGLE_MAPS_BASE_URL="https://maps.googleapis.com/maps/api"

# Gemini API
GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL="gemini-pro"

# Grog API (Enrichment)
GROG_API_URL="https://api.grog.example.com"
GROG_API_KEY="your-grog-api-key"

# Regulatory Database
REGULATORY_DB_URL="https://regulatory.example.com/api"
REGULATORY_DB_API_KEY="your-regulatory-api-key"

# LLM Configuration (for Pydantic AI Agents)
# OpenAI
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-4-turbo-preview"
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Anthropic Claude
ANTHROPIC_API_KEY="your-anthropic-api-key"
ANTHROPIC_MODEL="claude-3-opus-20240229"
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=2000

# Selenium Configuration
SELENIUM_HEADLESS=true
SELENIUM_TIMEOUT=30  # seconds
CHROME_DRIVER_PATH=""  # Leave empty to auto-download
SELENIUM_PAGE_LOAD_TIMEOUT=30

# Celery (Background Tasks)
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# Confidence Scoring Thresholds
CONFIDENCE_AUTO_APPROVE_THRESHOLD=0.85
CONFIDENCE_AUTO_REJECT_THRESHOLD=0.30
# Between these thresholds goes to manual review

# Validation Configuration
SIMPLE_PATH_CACHE_EXPIRY=86400  # 24 hours in seconds
ENABLE_PARALLEL_AGENTS=true
MAX_PARALLEL_AGENTS=4
AGENT_TIMEOUT=60  # seconds

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,http://localhost:8080"
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS="*"
CORS_ALLOW_HEADERS="*"

# Security
SECRET_KEY="your-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Manual Review Queue
MANUAL_REVIEW_WEBHOOK_URL=""  # Optional webhook for notifications
MANUAL_REVIEW_EMAIL_ENABLED=false
MANUAL_REVIEW_EMAIL_TO="admin@example.com"

# Monitoring & Logging
SENTRY_DSN=""  # Optional Sentry integration
ENABLE_METRICS=false
METRICS_PORT=9090
